<% if (site.data.friends) { %>
  <% if (theme.style.scheme === '1') { %>
    <%-partial('partials/1/back_actions_card')%>
  <% } %>
  <div class="mdui-row">
    <% for (var i in site.data.friends) { %>
      <% if (site.data.friends[i].down !== true) { %>
        <div class="mdui-col-xs-12 mdui-col-sm-6 mdui-col-md-4">
          <div class="mdui-card" style="margin-bottom: 16px;">
            <ul class="mdui-list" style="padding: 8px;">
              <a href="<%= site.data.friends[i].link %>" title="<%= i %>" target="_blank">
                <li class="mdui-list-item mdui-ripple">
                  <div class="mdui-list-item-avatar"><img src="<%= site.data.friends[i].avatar %>" alt="<%= i %>"/></div>
                  <div class="mdui-list-item-content">
                    <div class="mdui-list-item-title mdui-text-truncate"><%= i %></div>
                    <div class="mdui-list-item-text mdui-list-item-one-line mdui-text-truncate"><span class="mdui-text-color-theme-text"><%= site.data.friends[i].descr %></span></div>
                  </div>
                </li>
              </a>
            </ul>
          </div>
        </div>
      <% } %>
    <% } %>
  </div>
  <%-partial('../partials/share/fab/index')%>
<% } %>
