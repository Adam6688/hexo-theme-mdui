<div class="mdui-card card-bottom-fix <% if (theme.style.hoverable === true) { %>mdui-hoverable<% } %>" id="index">
  <div class="mdui-card-header posts-card-header">
    <img class="mdui-card-header-avatar" src="<%= theme.style.avatar %>"/>
    <div class="content mdui-valign">
      <span class="username"><%= config.author %></span>
      <div class="arrow">
        <svg viewBox="0 0 48 48"><path d="M20 14l10 10-10 10z"></path></svg>
      </div>
      <div class="mdui-typo-body-1-opacity"><%= theme.translations.posts.public %></div>
    </div>
    <div class="flex-spacer"></div>
    <div class="mdui-valign">
      <div class="mdui-typo-caption-opacity date"><%= date(post.date, 'MMM DD, YYYY') %></div>
      <div class="buttons">
        <a href="<%= url_for(post.path) %>" target="_self" class="mdui-btn mdui-btn-icon mdui-ripple mdui-btn-dense"><i class="mdui-icon material-icons">&#xe89e;</i></a>
      </div>
    </div>
  </div>
  <div class="posts-card-title mdui-typo">
    <a href="<%= url_for(post.path) %>" target="_self"><%= post.title %></a>
  </div>
  <div class="posts-card-line">
    <div class="mdui-divider"></div>
  </div>
  <div class="posts-card-content">
    <%- strip_html(truncate(post.content,{length: theme.post.entry_excerpt })) %>
  </div>
  <% if (post.thumbnail) { %>
    <div class="mdui-card-media">
      <img src="<%= post.thumbnail %>"/>
    </div>
  <% } %>
  <% if (post.tag !== false || post.category !== false) { %>
    <div class="posts-card-actions">
      <% if (post.category !== false) { %>
        <div class="mdui-chip">
          <span class="mdui-chip-icon"><i class="mdui-icon material-icons mdui-text-color-black-icon">&#xe149;</i></span>
        </div>
        <div class="content mdui-text-color-theme-text">
          categories here
        </div>
      <% } %>
      <div class="flex-spacer"></div>
      <% if (post.tag !== false) { %>
        <div class="mdui-chip">
          <span class="mdui-chip-icon"><i class="mdui-icon mdui-text-color-black-icon fa fa-tags"></i></span>
        </div>
        <div class="content mdui-text-color-theme-text">
          tags here
        </div>
      <% } %>
    </div>
  <% } %>
</div>
