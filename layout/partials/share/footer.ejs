        </div>
        <% if (theme.footer.ICP) { %>
          <div class="mdui-text-center mdui-typo mdui-typo-caption-opacity" onclick="window.open('http://www.miitbeian.gov.cn/', '_blank');"><%= theme.footer.ICP %></div>
        <% } %>
      </div>
      <div class="mdui-col-xs-12">
        <div class="mdui-text-center mdui-typo mdui-typo-caption-opacity">
          Powered by <a href="http://hexo.io">Hexo</a><br>
          Theme - <a href="//github.com/Halyul/hexo-theme-mdui">MDUI</a>
        </div>
      </div>
    </div>

    <div class="mdui-dialog" id="contact-dialog">
      <div class="mdui-dialog-title">
        <%= theme.translations.footer.how_to_contact_me %>
      </div>
      <div class="mdui-dialog-content no-padding-bottom">
        <div class="mdui-list">
          <% for (var i in theme.sns){ %>
            <a href="<%= theme.sns[i] %>" title="<%= i %>" class="mdui-list-item mdui-ripple" target="_blank">
              <%= i %>
            </a>
          <% } %>
        </div>
      </div>
      <div class="mdui-dialog-actions">
        <button class="mdui-btn mdui-ripple" mdui-dialog-close>
          <%= theme.translations.footer.close %>
        </button>
      </div>
    </div>
  </footer>
<% } else { %>
