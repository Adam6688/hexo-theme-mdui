<div class="mdui-appbar mdui-appbar-fixed">
  <div class="mdui-toolbar mdui-color-theme">
    <% if (is_home()) { %>
      <button class="mdui-btn mdui-btn-icon mdui-hidden-sm-up" mdui-drawer="{target: '#drawer'}">
        <i class="mdui-icon material-icons">&#xe5d2;</i>
      </button>
    <% } else { %>
      <button class="mdui-btn mdui-btn-icon" id="back">
        <i class="mdui-icon material-icons">&#xe5c4;</i>
      </button>
    <% } %>
    <a href="<%= config.root %>" class="mdui-typo-headline"><%= theme.appbar.title %></a>
    <div class="mdui-toolbar-spacer"></div>
    <button class="mdui-btn mdui-ripple mdui-hidden-xs" mdui-menu="{target: '#menu-archives'}">Archives</button>
    <%- partial('partials/menu/archives') %>
    <button class="mdui-btn mdui-ripple mdui-hidden-xs" mdui-menu="{target: '#menu-pages'}">Pages</button>
    <%- partial('partials/menu/pages') %>
  </div>
</div>
