<% if (theme.color.random === 'global') { %>
  <body class="mdui-theme-primary-<%= primary_color %> mdui-theme-accent-<%= accent_color %> <% if (theme.color.layout === 'dark' || page.layout === 'galleries' || page.layout === 'gallery') { %>mdui-theme-layout-dark<% } %> <% if (!is_home()) { %>mdui-appbar-with-toolbar<% } %>">
<% } else if (theme.color.random === 'post' && is_post()) { %>
  <% if (page.primary_color || page.accent_color) { %>
    <body class="mdui-theme-primary-<%= page.primary_color || primary_color %> mdui-theme-accent-<%= page.accent_color || accent_color %> <% if (theme.color.layout === 'dark' || page.layout === 'galleries' || page.layout === 'gallery') { %>mdui-theme-layout-dark<% } %> <% if (!is_home()) { %>mdui-appbar-with-toolbar<% } %>">
  <% } else { %>
    <body class="mdui-theme-primary-<%= primary_color %> mdui-theme-accent-<%= accent_color %> <% if (theme.color.layout === 'dark' || page.layout === 'galleries' || page.layout === 'gallery') { %>mdui-theme-layout-dark<% } %> <% if (!is_home()) { %>mdui-appbar-with-toolbar<% } %>">
  <% } %>
<% } else { %>
  <body class="mdui-theme-primary-<%= theme.color.primary_color %> mdui-theme-accent-<%= theme.color.accent_color %> <% if (theme.color.layout === 'dark' || page.layout === 'galleries' || page.layout === 'gallery') { %>mdui-theme-layout-dark<% } %> <% if (!is_home()) { %>mdui-appbar-with-toolbar<% } %>">
<% } %>
