<script type="text/ls-javascript" id="back-button-script">
  /* swipable drawer */
  (function () {
    var drawer = new mdui.Drawer('#drawer', {swipe: true});
  })();

  /* back button */
  (function() {
    $$(document).on('click', 'button[back]', function() {
        window.history.back();
    });
  })();
</script>

